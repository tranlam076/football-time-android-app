<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/league_fixture.row_height"
        android:layout_marginTop="@dimen/league_fixture.margin_top"
        android:background="@color/colorLightGray"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHomeLogo"
                android:layout_width="@dimen/league_fixture.team_logo_size"
                android:layout_height="@dimen/league_fixture.team_logo_size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/league_fixture.team_logo_margin"
                android:scaleType="centerInside"
                android:src="@drawable/img_loading" />

            <TextView
                android:id="@+id/tvHomeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="@dimen/league_fixture.padding"
                android:scrollHorizontally="false"
                android:text="input"
                android:textSize="@dimen/text_size.normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="time"
                android:textSize="@dimen/league_fixture.text_small" />

            <TextView
                android:id="@+id/tvCenter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="day"
                android:textSize="@dimen/league_fixture.text_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAwayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingBottom="@dimen/league_fixture.padding"
                android:paddingLeft="@dimen/league_fixture.special_padding"
                android:paddingRight="@dimen/league_fixture.padding"
                android:paddingTop="@dimen/league_fixture.padding"
                android:scrollHorizontally="false"
                android:text="input"
                android:textSize="@dimen/text_size.normal" />

            <ImageView
                android:id="@+id/ivAwayLogo"
                android:layout_width="@dimen/league_fixture.team_logo_size"
                android:layout_height="@dimen/league_fixture.team_logo_size"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/league_fixture.team_logo_margin"
                android:layout_toRightOf="@id/tvAwayName"
                android:scaleType="centerInside"
                android:src="@drawable/img_loading" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>